{
  "project": {
    "environment": "development",
    "architecture": "integrated"
  },
  "directories": {
    "rules": {
      "cobol": "Rules/api/cobol"
    }
  },
  "paths": {
    "client": {
      "root": "client",
      "styles": "client/styles",
      "images": "client/images",
      "fonts": "client/fonts",
      "html": {
        "index": "client/index.html"
      }
    },
    "cobol": {
      "root": "Rules/api/cobol",
      "programs": {
        "start": "Rules/api/cobol/start",
        "login": "Rules/api/cobol/login",
        "transaction": "Rules/api/cobol/transaction"
      }
    },
    "logs": {
      "app": "/log/api-out.log",
      "error": "/log/api-error.log",
      "cobol": "/log/cobol.log"
    },
    "api": {
      "root": "Rules/api"
    }
  },
  "endpoints": {
    "base": "/api/v1",
    "health": "/health",
    "cobol": {
      "base": "/cobol",
      "bin": "/cobol/bin",
      "login": "/cobol/login",
      "transaction": "/cobol/transaction"
    },
    "auth": {
      "login": "/auth/login",
      "logout": "/auth/logout",
      "refresh": "/auth/refresh"
    }
  },
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "origin": [
        "http://localhost:3000",
        "http://localhost:3001",
        "https://linux.taile65a90.ts.net",
        "http://linux.taile65a90.ts.net"
      ],
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "Accept"],
      "exposedHeaders": ["Content-Length", "X-Total-Count"]
    }
  },
  "executables": {
    "engine": "Rules/api/cobol/DEV/Enginev3",
    "name": "Enginev3"
  }

} 