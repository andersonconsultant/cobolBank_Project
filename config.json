{
  "project": {
    "environment": "development"
  },
  "directories": {
    "rules": {
      "cobol": "/srv/cb_Project/Rules/api/cobol"
    }
  },
  "paths": {
    "client": {
      "root": "../../client",
      "styles": "../../client/styles",
      "images": "../../client/images",
      "fonts": "../../client/fonts",
      "html": {
        "index": "../../client/index.html"
      }
    },
    "cobol": {
      "root": "/srv/cb_Project/Rules/api/cobol",
      "programs": {
        "start": "/srv/cb_Project/Rules/api/cobol/start",
        "login": "/srv/cb_Project/Rules/api/cobol/login",
        "transaction": "/srv/cb_Project/Rules/api/cobol/transaction"
      }
    },
    "logs": {
      "app": "/log/api-out.log",
      "error": "/log/api-error.log",
      "cobol": "/log/cobol.log"
    }
  },
  "endpoints": {
    "base": "/api/v1",
    "health": "/health",
    "cobol": {
      "base": "/cobol",
      "bin": "/cobol/bin",
      "login": "/cobol/login",
      "transaction": "/cobol/transaction"
    },
    "auth": {
      "login": "/auth/login",
      "logout": "/auth/logout",
      "refresh": "/auth/refresh"
    }
  },
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "baseUrl": "/api/v1",
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    }
  }
} 